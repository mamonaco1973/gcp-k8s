# =============================================================
# Deployment: flask-app (Python Web App on Port 8000)
# =============================================================
apiVersion: apps/v1
kind: Deployment
metadata:
  name: flask-app

spec:
  replicas: 2
  selector:
    matchLabels:
      app: flask-app

  template:
    metadata:
      labels:
        app: flask-app

    spec:
      serviceAccountName: firestore-access-sa
      containers:
        - name: flask-app
          image: $IMAGE
          ports:
            - containerPort: 8000
          livenessProbe:
            httpGet:
              path: /gtg
              port: 8000
            initialDelaySeconds: 60
            periodSeconds: 30
            failureThreshold: 6
            timeoutSeconds: 10

---

# =============================================================
# Service: flask-app-service (Internal, NGINX will expose it)
# =============================================================
apiVersion: v1
kind: Service
metadata:
  name: flask-app-service

spec:
  selector:
    app: flask-app

  ports:
    - protocol: TCP
      port: 80
      targetPort: 8000

  type: ClusterIP   # ✅ Changed from LoadBalancer to ClusterIP for NGINX Ingress

---

# =============================================================
# Horizontal Pod Autoscaler: flask-app-hpa
# =============================================================
apiVersion: autoscaling/v2
kind: HorizontalPodAutoscaler
metadata:
  name: flask-app-hpa

spec:
  scaleTargetRef:
    apiVersion: apps/v1
    kind: Deployment
    name: flask-app

  minReplicas: 2
  maxReplicas: 5

  metrics:
    - type: Resource
      resource:
        name: cpu
        target:
          type: Utilization
          averageUtilization: 60

---

# =============================================================
# Ingress: flask-app-ingress (NGINX Exposes This)
# =============================================================
apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: flask-app-ingress
  annotations:
    nginx.ingress.kubernetes.io/rewrite-target: /
spec:
  ingressClassName: nginx   # ✅ Modern Ingress class field
  rules:
    - http:
        paths:
          - path: /
            pathType: Prefix
            backend:
              service:
                name: flask-app-service
                port:
                  number: 80
